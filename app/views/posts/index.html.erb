<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Text</th>
      <th>Img url</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.text %></td>
        <td><%= post.img_name%></td>
        <td><%= post.location %></td>
        <td><%= link_to 'Show', user_post_path(post.user_id,post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(post.user_id,post) %></td>
        <td><%= link_to 'Destroy', user_post_path(post.user_id,post) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path %>
